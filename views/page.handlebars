    <section class="featured-recipes"><!-- Home Page -->
        {{#if home}}
        <h1>Featured Recipe</h1>
            <div class="recipes-grid">
                {{> recipecardTemplate recipeoftheday}}
            </div>
        <h1>Explore Recipes</h1>
        <div class="recipes-grid">
            {{#each recipe}}
            {{> recipecardTemplate}}
            {{/each}}
        </div>
        <a href="/allrecipes" class="all-recipes-link">All Recipes â†’</a>

        {{/if}}

        {{#if all}}
        <div class="recipes-grid">
            {{#each recipeCard}}
            {{> recipecardTemplate}}
            {{/each}}
        </div>
        {{/if}}

        {{#if saved}}
        <div class="saved-recipes">
            <div class="recipes-grid">
                {{#each savedRecipes}}
                {{> recipecardTemplate }}
                {{/each}}
            </div>
        </div>
        {{else}}
        {{>dropdown}}
        <div class="recipes-grid">
            {{#each unsavedRecipes}}
            {{> recipecardTemplate }}
            {{/each}}
        </div>
        {{/if}}

    </section>
